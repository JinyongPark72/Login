<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    tools:context="com.thetasystem.stepone.MainActivity">

    <ScrollView
        android:id="@+id/mainscrollView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <ImageView
                android:id="@+id/logoimageView"
                android:layout_width="match_parent"
                android:layout_height="331dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fbbuttonFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTintMode="screen"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/fblogoImageView"
                        android:layout_width="66dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="16dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/facebook_logo" />

                    <View
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="4.0dip"
                        android:layout_marginLeft="56.0dip"
                        android:layout_marginTop="4.0dip"
                        android:background="#19ffffff" />

                    <TextView
                        android:id="@+id/fbstarttextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="페이스북으로 시작하기"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/googlebuttonFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/googlelogoImageView"
                        android:layout_width="66dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="16dp"
                        android:scaleType="centerCrop"

                        app:srcCompat="@drawable/facebook_logo" />
                    <!--폰 실행시 어플 종료됨.이미지 문제??-->
                    <!--app:srcCompat="@drawable/google_logo" />-->

                    <TextView
                        android:id="@+id/googlestartTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="구글로 시작하기"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textStyle="bold" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/logintextView"
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:text="이메일로 로그인"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jointextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일로 가입하기"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
